            <kind>1</kind>
            <string>/// a bunch of stuff

// user input
UP    = keyboard_check(ord("W"))
LEFT  = keyboard_check(ord("A"))
DOWN  = keyboard_check(ord("S"))
RIGHT = keyboard_check(ord("D"))

BOMB = keyboard_check_pressed(ord("F"))
DASH = keyboard_check_pressed(vk_space)

SHOOTING = mouse_check_button(mb_left)
FOCUS = mouse_check_button(mb_right)

direction_towards_mouse = point_direction(x, y, mouse_x, mouse_y)

// cheats
if (keyboard_check(ord("H"))) hit_points += 1

// score is never under 0
if (game_score &lt; 0) game_score = 0

// update high score
if (session_high_score &lt; game_score) session_high_score = game_score

if (!global.paused) {
    // acceleration
    ax = 2 * (RIGHT - LEFT) / ((3 * FOCUS) + 1)
    ay = 2 * (DOWN - UP) / ((3 * FOCUS) + 1)
    
    // dashing
    can_dash++
    if (can_dash &gt; dash_max_count) can_dash = dash_max_count
    if (DASH and can_dash = dash_max_count) {
        dashing = true
        can_dash = 0
        alarm[2] = room_speed / 2
    }
    
    // friction 
    // "What? In space?"
    // "Yep."
    vx -= sign(vx) * friction_strength
    vy -= sign(vy) * friction_strength
    
    // velocity
    if (dashing) {
        vx = sign(vx) * dash_speed
        vy = sign(vy) * dash_speed
    }
    else {
        vx += ax
        vy += ay
    }
    
    // don't let the player move faster than max_speed
    // unless if the player is dashing
    if (!dashing) {
        vx = clamp(vx, -MAX_SPEED, MAX_SPEED)
        vy = clamp(vy, -MAX_SPEED, MAX_SPEED)
    }
    
    // apply velocity to position
    x += vx
    y += vy
    
    // player is always within the room
    x = clamp(x, 0, room_width)
    y = clamp(y, 0, room_height)
    
    // player faces the cursor
    image_angle = direction_towards_mouse - 90
    
    // create a trail if the player is dashing
    if (dashing) ghost_trail(1)
    
    // hitbox visibility
    obj_hitbox.visible = FOCUS
    
    // reload
    if (gun_heat = max_gun_heat and !reloading) reloading = true
    else if (gun_heat = 0 and reloading) reloading = false
    
    // shooting
    can_shoot++
    if (!reloading) {
        if (!SHOOTING) gun_cooldown_rate(2)
        else if (can_shoot &gt; 1) {
            can_shoot = 0
            gun_heat++
            rand_offset = irandom_range(-12, 12) / ((FOCUS * 2) + 1)
            new_lazer = instance_create(x, y, obj_lazer_player)
            new_lazer.image_angle = image_angle + rand_offset
            new_lazer.direction = image_angle + 90 + rand_offset
            audio_play_sound(sfx_lazer1, 0, false)
        }
    }
    else gun_cooldown_rate(1)

} //end if (!global.paused)

// restart game
else if (game_over and keyboard_check_pressed(vk_return)) room_restart()
</string>
