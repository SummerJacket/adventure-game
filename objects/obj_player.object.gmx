POINT_TOWARD_MOUSE = point_direction(x, y, mouse_x, mouse_y)
image_angle = POINT_TOWARD_MOUSE - 90

// shoot a lazer
if (SHOOT and can_shoot &gt; 4) {
    can_shoot = 0
    NEW_LAZER = instance_create(x, y, obj_lazer)
